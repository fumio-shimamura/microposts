<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>
</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: settings_path) do |f| %>
      <%= f.label :postsperpage, "Microposts per page"  %>
      <%= f.select :postsperpage, {"All" => 0, "10" => 10, "25" => 25, "50" => 50} %>
      
      <%= f.submit "update", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>